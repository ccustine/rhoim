# RHOIM Environment Variables
# Copy this file to .env and customize for your environment

# Container registry configuration
REGISTRY=quay.io
ORG=ccustine
VERSION=v0.2.0

# HuggingFace configuration (for model downloads)
HF_TOKEN=hf_YOUR_TOKEN_HERE

# Kubernetes/OpenShift configuration
NAMESPACE=rhoim
KUBECONFIG=~/.kube/config

# Remote build configuration (optional)
REMOTE_HOST=build-server.example.com
REMOTE_USER=youruser
REMOTE_DIR=~/rhoim-build

# Model configuration
MODEL_NAME=ibm-granite/granite-7b-instruct
MODEL_PATH=/models
